{
  "openapi": "3.0.0",
  "info": {
    "title": "API List",
    "version": "1.0.0",
    "description": "API documentation."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/admin/login": {
      "post": {
        "summary": "Admin Login",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },

    "/admin/refresh-token": {
      "post": {
        "summary": "Admin Refresh Token",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "New tokens generated" }
        }
      }
    },

    "/admin/booking": {
      "post": {
        "summary": "Create Booking (Admin)",
        "tags": ["Admin"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object" }
            }
          }
        },
        "responses": {
          "200": { "description": "Booking created" }
        }
      },
      "get": {
        "summary": "List Bookings (Admin)",
        "tags": ["Admin"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "List of bookings" }
        }
      }
    },

    "/user/register": {
      "post": {
        "summary": "User Registration",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object" }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" }
        }
      }
    },

    "/user/login": {
      "post": {
        "summary": "User Login",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },

    "/user/refresh-token": {
      "post": {
        "summary": "User Refresh Token",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "New token created" }
        }
      }
    },

    "/user/booking": {
      "post": {
        "summary": "Create Booking (User)",
        "tags": ["User"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "type": "object" } }
          }
        },
        "responses": {
          "201": { "description": "Booking created" }
        }
      },
      "get": {
        "summary": "List Bookings (User)",
        "tags": ["User"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Booking list" }
        }
      }
    },

    "/user/booking/{id}": {
      "put": {
        "summary": "Update Booking (User)",
        "tags": ["User"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "type": "object" } }
          }
        },
        "responses": {
          "200": { "description": "Booking updated" }
        }
      },
      "patch": {
        "summary": "Partially Update Booking (User)",
        "tags": ["User"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "type": "object" } }
          }
        },
        "responses": {
          "200": { "description": "Booking updated" }
        }
      },
      "delete": {
        "summary": "Delete Booking (User)",
        "tags": ["User"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Booking deleted" }
        }
      }
    },

    "/status": {
      "get": {
        "summary": "Server & DB Health Check",
        "tags": ["System"],
        "responses": {
          "200": { "description": "Status information" }
        }
      }
    }
  }
}
